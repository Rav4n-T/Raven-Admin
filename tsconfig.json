{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
      // "/*": ["./public/*"],
    },
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
}
